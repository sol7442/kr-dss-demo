<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- 콘솔 출력 패턴 설정 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- 날짜, 로그레벨, 스레드, 클래스명, 메시지 -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- DSS 핵심 서명/검증 로직 디버깅 -->
    <logger name="eu.europa.esig.dss.signature" level="DEBUG"/>
    <logger name="eu.europa.esig.dss.validation" level="DEBUG"/>
    <logger name="eu.europa.esig.dss.spi" level="DEBUG"/>
    <logger name="eu.europa.esig.dss.crl" level="DEBUG"/>
    <logger name="eu.europa.esig.dss.ocsp" level="DEBUG"/>

    <!-- 서명 무결성 및 검증 흐름 (SignatureIntegrityValidator 등) -->
    <logger name="eu.europa.esig.dss.x" level="DEBUG"/>

    <!-- HTTP 통신 (OCSP / CRL / TSL 호출 로깅) -->
    <logger name="eu.europa.esig.dss.client.http" level="DEBUG"/>

    <!-- 애플리케이션 주요 패키지 -->
    <logger name="kr.dss.cps" level="DEBUG"/>

    <!-- Spring 프레임워크 관련 (INFO 수준 유지) -->
    <logger name="org.springframework" level="INFO"/>

    <!-- 루트 로거 설정 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
